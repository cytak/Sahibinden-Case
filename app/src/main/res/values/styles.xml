<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="tweet_card_title_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="tweet_card_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="tweet_card_multi_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:ellipsize">end</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">5</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="tweet_multi_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:ellipsize">end</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="tweet_toolbar_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="appCompatButton_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>